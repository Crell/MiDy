{parameters Folder $root, int $depth = 2}

<ul n:if="$depth > 0" n:inner-foreach="$root->children() as $page">
    <li>
        <a href="{$page->path()}">{$page->title()}</a>
        {if $page instanceof Crell\MiDy\Tree\Folder}
            {include sidebar.latte, root: $page, depth: $depth - 1}
        {/if}
    </li>
</ul>
