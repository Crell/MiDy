{*{default $title = 'Untitled'}*}
{* This won't affect the actual response, but does influence the escaping logic in Latte. *}
{contentType text/html}
{default $siteName = ''}

{varType \Crell\MiDy\PageTree\Folder $root}

<html>
<head>
    <title>{$siteName}: {ifset title}{include title}{else}Untitled{/ifset}</title>
</head>
<body>
    <h1>{ifset title}{include title}{else}Untitled{/ifset}</h1>
    <main>
        {block content}{/block}
    </main>
<aside>
    {block sidebar}
        {include 'sidebar.latte' root: $root}
    {/block}

</aside>
</body>
</html>
