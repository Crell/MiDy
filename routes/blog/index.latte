{varType string $templateRoot}
{varType Crell\MiDy\Tree\Folder $root}

{layout $templateRoot . '/layout.latte'}

{define title}Test Page{/define}

{block content}
    {foreach $root->find('/blog') as $page}
        <article>
            <a href="{$page->path()}">{$page->title()}</a>
        </article>
    {/foreach}
{/block}
