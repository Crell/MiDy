{
    "name": "crell/midy",
    "require": {
        "php": "~8.3",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "psr/log": "^3.0",
        "latte/latte": "^3.0",
        "php-di/php-di": "^7.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "crell/tukio": "^2.0",
        "contributte/latte-parsedown-extra": "^2.0",
        "crell/config": "dev-master",
        "league/commonmark": "^2.4",
        "symfony/yaml": "^7.1",
        "webmozart/glob": "^4.7",
        "league/flysystem": "^3.28",
        "httpsoft/http-emitter": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2.0",
        "phpbench/phpbench": "^1.3.1",
        "phpstan/phpstan": "^1.11.7",
        "mikey179/vfsstream": "^1.6",
        "league/flysystem-adapter-test-utilities": "^3.28"
    },
    "autoload": {
        "psr-4": {
            "Crell\\MiDy\\": "src",
            "App\\Routes\\": "routes"
        },
        "files": ["src/strings.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Crell\\MiDy\\": "tests",
            "Crell\\MiDy\\Benchmarks\\": "benchmarks"
        }
    },
    "scripts": {
        "benchmarks": "vendor/bin/phpbench run benchmarks --report=aggregate",
        "test": "phpunit",
        "phpstan": "phpstan",
        "coverage": "php -dextension=pcov.so -dpcov.enabled=1 -dpcov.directory=src vendor/bin/phpunit --coverage-text",
        "all-checks": [
            "phpunit",
            "phpstan"
        ]
    }
}
