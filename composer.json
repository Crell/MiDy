{
    "name": "crell/midy",
    "require": {
        "php": "~8.4",
        "ext-pdo": "*",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "psr/log": "^3.0",
        "latte/latte": "^3.0",
        "php-di/php-di": "^7.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "crell/tukio": "^2.0",
        "crell/config": "^0.2.0",
        "crell/fp": "^1.0",
        "league/commonmark": "^2.4",
        "symfony/yaml": "^7.1",
        "httpsoft/http-emitter": "^1.1",
        "spatie/commonmark-highlighter": "^3.0",
        "symfony/dotenv": "^7.1",
        "yiisoft/db-sqlite": "^1.2",
        "yiisoft/cache-file": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.0",
        "phpbench/phpbench": "^1.3.1",
        "phpstan/phpstan": "^1.11.7",
        "mikey179/vfsstream": "^1.6",
        "tracy/tracy": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "Crell\\MiDy\\": "src",
            "App\\Routes\\": "routes"
        },
        "files": ["src/strings.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Crell\\MiDy\\": "tests",
            "Crell\\MiDy\\Benchmarks\\": "benchmarks"
        }
    },
    "bin": [
        "pregenerate-static.php",
        "clean.php",
        "staticify.php"
    ],
    "scripts": {
        "benchmarks": "vendor/bin/phpbench run benchmarks --report=aggregate",
        "test": "phpunit",
        "phpstan": "phpstan",
        "coverage": "php -dextension=pcov.so -dpcov.enabled=1 -dpcov.directory=src vendor/bin/phpunit --coverage-text",
        "all-checks": [
            "phpunit",
            "phpstan"
        ]
    }
}
