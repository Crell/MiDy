{
    "name": "crell/midy",
    "description": "A tool for building static or Mildly Dynamic websites",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "~8.4",
        "ext-dom": "*",
        "ext-pdo": "*",
        "crell/carica": "^0.4.3",
        "crell/config": "^0.2.0",
        "crell/fp": "^1.0",
        "crell/path": "^0.1.2",
        "crell/tukio": "^2.0",
        "doctrine/dbal": "^4.4.1",
        "httpsoft/http-emitter": "^1.1.1",
        "latte/latte": "^3.1.1",
        "league/commonmark": "^2.8",
        "nyholm/psr7": "^1.8.2",
        "nyholm/psr7-server": "^1.1",
        "php-di/php-di": "^7.1.1",
        "psr/http-server-handler": "^1.0.2",
        "psr/http-server-middleware": "^1.0.2",
        "psr/log": "^3.0.2",
        "spatie/commonmark-highlighter": "^3.0",
        "symfony/dotenv": "^7.4",
        "symfony/yaml": "^7.4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^13.0.2",
        "phpbench/phpbench": "^1.4.3",
        "phpstan/phpstan": "^2.1.39",
        "mikey179/vfsstream": "^1.6.12",
        "tracy/tracy": "^2.11.1"
    },
    "autoload": {
        "psr-4": {
            "Crell\\MiDy\\": "src",
            "App\\Routes\\": "routes"
        },
        "files": ["src/strings.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Crell\\MiDy\\": "tests",
            "Crell\\MiDy\\Benchmarks\\": "benchmarks"
        }
    },
    "bin": [
        "bin/midy-build-all",
        "bin/midy-build-static",
        "bin/midy-clean",
        "bin/midy-reindex"
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "benchmarks": "vendor/bin/phpbench run benchmarks --report=aggregate",
        "test": "phpunit",
        "phpstan": "phpstan",
        "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text --coverage-html=\"build/coverage\"",
        "all-checks": [
            "phpunit",
            "phpstan"
        ]
    }
}
